<article class="snippet">
  <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet__image">
  <h3 class="snippet__title">
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </h3>
  <p class="snippet__meta">by
    <span>{{ post.data.author }}</span>
    on
    <span>{{ post.data.date | postDate }}</span></p>
  <p class="snippet__body">{{ post.data.description }}<br><br>
  <span class="rtime">About {{ post | readingTime }} reading time </span></p>

  <a href="{{ post.url }}" class="btn btn--primary">Continue Reading</a>
</article>
